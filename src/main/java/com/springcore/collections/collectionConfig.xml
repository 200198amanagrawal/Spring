<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:context="http://www.springframework.org/schema/context"
 xmlns:p="http://www.springframework.org/schema/p"
 xmlns:c="http://www.springframework.org/schema/c"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans.xsd">
 <bean class="com.springcore.collections.Employee" name="employee1">
 	<property name="name" value="Aman"/>
 	<property name="phones">
 		<list>
 			<value>12</value>
 			<value>23</value>
 			<value>34</value>
 		</list>
 	</property>
 	<property name="addresses">
 		<set>
 			<value>abc12</value>
 			<value>abc12</value>
 			<value>def234</value>
 		</set>
 	</property>
 	<property name="courses">
 		<map>
 			<entry key="java" value="1 month"/>
 			<entry key="pyhton" value="2 month"/>
 			<entry key="cpp" value="2 month"/>
 		</map>
 	</property>
 </bean>
 
 <!-- reference injection employee-ref refers to the employee parameter which is passed in bank and ref is the reference it is going to use-->
 <bean class="com.springcore.collections.Bank" name="bank1" p:name="bankA" p:employee-ref="employee1"/>
  
  <!-- constructor injection-->
 <bean class="com.springcore.collections.Bank" name="bank2">
 	<constructor-arg value="bankB" /><!-- type as a param can be used to remove ambiguity of constructors-->
 	<constructor-arg ref="employee1" />
 </bean>
</beans>